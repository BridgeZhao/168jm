/**tab**/  
.swiper-tab{  
    width: 100%;  
    /*border-bottom: 2rpx solid #777777;  */
    text-align: center;  
    line-height: 80rpx;
    background: #4054b2;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    }  
.swiper-tab-list{  font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: #C4CAE7;
    height: 80rpx;  
}  
.on{ color: #C4CAE7;  
    border-bottom: 8rpx solid #C4CAE7;}  
  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; background-color: #FaFaFa; margin-top: 80rpx; }  
.swiper-box .swiper-item{  
    text-align: center;
    margin: 40rpx;
    width:670rpx;
    height: 280rpx;
    background-color: #fff;
    border-radius: 10rpx;  
    box-shadow:2rpx 2rpx 20rpx 8rpx #d9d9d9; 
    padding-bottom: 10rpx;
}  
.swiper-item-top , .swiper-item-centerTop ,.swiper-item-centerBottom, .swiper-item-bottom{
  width: 630rpx;
  height: 80rpx;
  background-color: #5572F9;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: left;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.swiper-item-centerTop{
  background-color: #FFF;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
  color: #666666;
  border-bottom: 2rpx solid #F5F5F5; 
}
.swiper-item-centerTop .state{
  color: #757575;
}
.swiper-item-centerTop .team{
  color: #212121;
}
.swiper-item-centerBottom{
  background-color: #FFF;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
  color: #999999;
  flex-direction:row;
  display: flex;
}
.swiper-item-centerBottom view{
  flex:1; 
  overflow: hidden;
  font-size: 24rpx;
}
 .swiper-item-bottom{
  background-color: #FFF;
  height: 40rpx;
  line-height: 40rpx;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
  color: #757575;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
 }
